<application xmlns="http://ns.adobe.com/air/application/3.4">
    <id>JukeboxScript</id>
    <versionNumber>1.0</versionNumber>
    <filename>JukeboxScript</filename>
    <description>Generate portable web browser interfaces and audio content.</description>
